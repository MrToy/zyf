.foods
	width:740px
	.food
		margin:0 20px 20px 0;float:left;line-height:0;display: inline-block;position: relative;overflow: hidden;cursor:pointer
		img
			width:350px
		.text
			position: absolute;bottom: 0;width: 100%;color: #fff;background: rgba(0,0,0,.5);font-size: 20px;padding: 10px 30px;box-sizing: border-box;font-weight: 700;line-height: 1.1;
.full
	width:100%
.viewer
	position:relative
	.info
		opacity:0;position: absolute;right: 50px;top: 50px;width: 350px;color: #fff;background: rgba(0,0,0,.7);padding: 20px;transition: all .5s;
		.title
			font-size: 25px;font-weight: 700;text-align: center;line-height: 2;
	&:hover .info
		opacity:1
.carouse
	position: relative;height: 22vw;min-height: 280px;overflow: hidden
	.item
		position: absolute;z-index: 1;opacity: 0;transition: all .5s ease;width: 100vw;height: 22vw;min-width: 1300px;min-height: 280px;
		&.active
			z-index:3;opacity:1
	.dots
		z-index:10;position: absolute;bottom: 20px;right: 50px;
		.dot
			float: left;margin-right: 10px;cursor: pointer;width: 16px;height: 16px;overflow: hidden;border-radius: 8px;background: rgba(0,0,0,0.5);transition: all .1s ease
			&.active
				background: #327ff1
